{
  "name": "commercetools-docs-kit",
  "version": "0.0.0",
  "description": "commercetools Documentation Kit (monorepo)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "format": "yarn format:js && yarn format:css && yarn format:md && yarn format:yaml && yarn format:graphql",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:css": "prettier --write --parser css '**/*.css'",
    "format:md": "prettier --write --parser markdown '**/*.{md,mdx}'",
    "format:yaml": "prettier --write --parser yaml '**/*.yaml'",
    "format:graphql": "prettier --write --parser graphql '**/*.graphql'"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "jest": "24.9.0",
    "jest-runner-prettier": "0.3.1",
    "jest-silent-reporter": "0.1.2",
    "jest-watch-typeahead": "0.4.0",
    "husky": "3.0.9",
    "lerna": "3.18.3",
    "prettier": "1.18.2"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=5"
  }
}