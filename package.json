{
  "name": "commercetools-docs-kit",
  "version": "0.0.0",
  "description": "commercetools Documentation Kit (monorepo)",
  "private": true,
  "workspaces": ["packages/*", "websites/*", "api-specs/*"],
  "preconstruct": {
    "packages": ["packages/ui-kit"]
  },
  "scripts": {
    "clean": "yarn workspaces foreach -p --include '@commercetools-website/*' run clean",
    "start": "yarn workspace @commercetools-website/docs-smoke-test start",
    "build-packages": "preconstruct build",
    "build": "./scripts/build.sh",
    "vercel-build": "echo \"you're welcome - nothing to build\"",
    "generate-icons": "yarn workspaces foreach -p --include @commercetools-docs/gatsby-theme-docs,@commercetools-docs/ui-kit,@commercetools-website/docs-smoke-test run generate-icons && prettier --write '**/generated/*.js'",
    "lint": "jest --projects jest.eslint.config.js jest.stylelint.config.js jest.text.config.js",
    "lint:js": "jest --config jest.eslint.config.js",
    "lint:css": "jest --config jest.stylelint.config.js",
    "lint:text": "jest --config jest.text.config.js",
    "format": "yarn format:js && yarn format:md && yarn format:yaml",
    "format:js": "prettier --write '**/*.{js,ts,tsx}'",
    "format:md": "prettier --write --parser markdown '**/*.md'",
    "format:yaml": "prettier --write --parser yaml '**/*.{yaml,yml}'",
    "labels:sync": "github-labels sync",
    "test": "jest --config jest.test.config.js",
    "test:watch": "yarn test --watch",
    "test:e2e": "yarn test:e2e:docs-smoke-test && yarn test:e2e:api-docs-smoke-test",
    "test:e2e:docs-smoke-test": "cross-env NODE_ENV=test cypress run --spec 'cypress/integration/docs-smoke-test/**/*'",
    "test:e2e:api-docs-smoke-test": "cross-env NODE_ENV=test cypress run --spec 'cypress/integration/api-docs-smoke-test/**/*'",
    "cypress-open": "cross-env NODE_ENV=test cypress open",
    "check-links": "npx linkinator ./public",
    "check-npm-login": "npm_config_registry=https://registry.npmjs.org npm whoami",
    "changeset": "changeset",
    "changeset:version-and-format": "changeset version && prettier --write --parser json '**/package.json' && YARN_ENABLE_IMMUTABLE_INSTALLS=false yarn install",
    "versions:uikit": "manypkg upgrade @commercetools-uikit"
  },
  "dependencies": {
    "@babel/helper-define-map": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "@babel/runtime-corejs3": "^7.16.8",
    "@changesets/changelog-github": "0.4.2",
    "@changesets/cli": "2.20.0",
    "@commercetools-frontend/babel-preset-mc-app": "21.0.0",
    "@commercetools-frontend/eslint-config-mc-app": "20.12.3",
    "@commercetools/github-labels": "1.1.0",
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@manypkg/cli": "0.19.1",
    "@manypkg/get-packages": "1.1.3",
    "@percy/cli": "1.0.0-beta.74",
    "@percy/cypress": "3.1.1",
    "@preconstruct/cli": "2.1.5",
    "@stylelint/postcss-css-in-js": "0.37.2",
    "@svgr/cli": "6.2.1",
    "@svgr/plugin-jsx": "6.2.1",
    "@svgr/plugin-svgo": "6.2.0",
    "@testing-library/cypress": "8.0.2",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.4.6",
    "core-js": "3.21.0",
    "cross-env": "7.0.3",
    "cypress": "9.4.1",
    "eslint": "8.8.0",
    "eslint-formatter-pretty": "4.1.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "jest-preset-gatsby": "1.0.134",
    "jest-runner-eslint": "1.0.0",
    "jest-runner-executor": "1.0.0",
    "jest-runner-prettier": "0.3.7",
    "jest-runner-stylelint": "2.3.7",
    "jest-silent-reporter": "0.5.0",
    "jest-watch-typeahead": "1.0.0",
    "linkinator": "3.0.3",
    "lint-staged": "12.3.3",
    "postcss-syntax": "0.36.2",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "serve": "13.0.2",
    "shelljs": "0.8.5",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.3.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "24.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.5.5",
    "wait-on": "6.0.0"
  },
  "engines": {
    "node": ">=14.15",
    "npm": ">=5"
  },
  "packageManager": "yarn@3.1.1"
}
