# Resource
(resourceName): ByProjectKeyResourceSearchApiPattern
(resourcePathUri): /{projectKey}/resource/searchApiPattern

uriParameters:
  projectKey:
    type: string
    (builtinType): string
    description: |-
      The CTP project key.
    required: true
get:
  securedBy:
  - oauth_2_0:
      scopes:
      - "manage_test:{projectKey}"
      - "view_test:{projectKey}"
  displayName: Search Resources
  description: |-
    Search all resources by specific parameters.
  queryParameters:
    fuzzy:
      required: false
      type: boolean
      (builtinType): boolean
      description: |-
        Whether to apply fuzzy search on the text to analyze.
      examples:
        default:
          strict: true
          value: true
    fuzzyLevel:
      required: false
      format: float
      type: number
      (builtinType): number
      description: |-
        Provide explicitly the fuzzy level desired if fuzzy is enabled. This value can not be higher than the one
        chosen by the platform by default.
      examples:
        default:
          strict: true
          value: 7
    staged:
      required: false
      type: boolean
      (builtinType): boolean
      description: |-
        Whether to query for the current or staged projections.
      examples:
        default:
          strict: true
          value: true
    filter:
      required: false
      type: string
      (builtinType): string
      examples:
        default:
          strict: true
          value: "bodyMassIndex"
    filter.facets:
      required: false
      type: string
      (builtinType): string
      examples:
        default:
          strict: true
          value: "weight,height"
    filter.query:
      required: false
      type: string
      (builtinType): string
      examples:
        default:
          strict: true
          value: "lastName = Doe"
    facet:
      required: false
      type: string
      (builtinType): string
    /text.[a-z]{2}(-[A-Z]{2})?/:
      required: false
      type: string
      (builtinType): string
      examples:
        default:
          strict: true
          value: "en"
